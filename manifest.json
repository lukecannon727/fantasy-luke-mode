{
  "manifest_version": 3,
  "name": "Fantasy - Luke Mode",
  "version": "2.0.0",
  "description": "Customizable Fantasy deck builder by @lukecannon727",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://fantasy.top/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://fantasy.top/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}